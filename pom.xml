<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>ru.histone</groupId>
    <artifactId>histone-acceptance-test-cases</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <build>
        <resources>
            <resource>
                <directory>src/main/acceptance</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>eu.numberfour.maven.plugins</groupId>
                <artifactId>file-list-maven-plugin</artifactId>
                <version>1.0.0</version>
                <configuration>
                    <caseSensitive>true</caseSensitive>
                    <includes>
                        <include>**/*.xml</include>
                    </includes>
                </configuration>
                <executions>
                    <execution>
                        <id>1-generate-file-list-parser</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>list</goal>
                        </goals>
                        <configuration>
                            <baseDir>src/main/acceptance/parser</baseDir>
                            <outputFile>target/classes/parser/cases.json</outputFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>2-generate-file-list-evaluator</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>list</goal>
                        </goals>
                        <configuration>
                            <baseDir>src/main/acceptance/evaluator</baseDir>
                            <outputFile>target/classes/evaluator/cases.json</outputFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <scm>
        <connection>scm:git:git://github.com/MegafonWebLab/histone-acceptance-tests.git</connection>
        <developerConnection>scm:git:ssh://git@github.com:MegafonWebLab/histone-acceptance-tests.git</developerConnection>
    </scm>
    <distributionManagement>
        <repository>
            <id>histone</id>
            <name>weblab-histone-releases</name>
            <url>http://weblab.megafon.ru/maven/histone-release</url>
        </repository>
        <snapshotRepository>
            <id>histone</id>
            <name>weblab-histone-snapshots</name>
            <url>http://weblab.megafon.ru/maven/histone-snapshot</url>
        </snapshotRepository>
    </distributionManagement>
</project>
