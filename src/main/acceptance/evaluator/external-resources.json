[{
	"name": "loadJSON",
	"cases": [{
		"input": "a {{loadJSON('testresources/json/test_for_json.json')['key']}} b {{loadJSON('testresources/json/test_for_json.json').isMap()}} c",
		"expected": "a 123 b true c"
	}, {
		"input": "a {{loadJSON('unknown.json').isUndefined()}} b",
		"expected": "a true b"
	}, {
		"input": "a {{loadJSON('dummy:/file.json').isUndefined()}} b",
		"expected": "a true b"
	}, {
		"input": "a {{loadJSON('testresources/json/test_for_json_array.json')}} b {{loadJSON('testresources/json/test_for_json_array.json').isMap()}} c",
		"expected": "a 1 2 3 b true c"
	}, {
		"input": "a {{loadJSON('testresources/json/test_for_json_string.json')}} b {{loadJSON('testresources/json/test_for_json_string.json').isString()}} c",
		"expected": "a test string b true c"
	}, {
		"input": "a {{loadJSON('testresources/json/test_for_json_invalid.json').isUndefined()}} b",
		"expected": "a true b"
	}]
}, {
	"name": "loadText",
	"cases": [{
		"input": "a {{loadText('testresources/txt/file.txt')}} b",
		"expected": "a text file content b"
	}, {
		"input": "a {{loadText('dummy:/file.txt').isUndefined()}} b",
		"expected": "a true b"
	}, {
		"input": "a {{loadText('testresources/unknown.txt').isUndefined()}} b",
		"expected": "a true b"
	}, {
		"input": "a {{loadText('testresources/txt/file_with_markup.txt')}} b",
		"expected": "a text file {{'test'}} content b"
	}]
}, {
	"name": "import",
	"cases": [{
			"resourceResolver": { "-type": "default" },
			"input": "a {{import ':baseURI:testresources/tpl/test_for_import.tpl'}} b {{x}} c {{macro_name()}} d",
			"expected": "a  b 10 c inner macro output d"
		  },
		  {
			"resourceResolver": { "-type": "default" },
			"input": "a {{import 'other::baseURI:testresources/tpl/test_for_import.tpl'}} b",
			"expected": "a  b"
		  },
		  {
			"resourceResolver": { "-type": "default" },
			"input": "a {{import 'other::baseURI:testresources/tpl/unknown.tpl'}} b",
			"expected": "a  b"
		  },
		  {
			"resourceResolver": { "-type": "default" },
			"input": "a {{var x = 30}} b {{x}} c {{import ':baseURI:testresources/tpl/test_for_import.tpl'}} d {{x}} e {{macro_name()}} f",
			"expected": "a  b 30 c  d 10 e inner macro output f"
		  },
		  {
			"resourceResolver": { "-type": "default" },
			"input": "a {{macro macro_name}}local macro{{/macro}} b {{macro_name()}} c {{import ':baseURI:testresources/tpl/test_for_import.tpl'}} d {{macro_name()}} e",
			"expected": "a  b local macro c  d inner macro output e"
		  },
		  {
			"resourceResolver": { "-type": "default" },
			"input": "a {{import 'dummy:/file.tpl'}} b",
			"expected": "a  b"
		  },
		  {
			"resourceResolver": { "-type": "default" },
			"input": "a {{import ':baseURI:testresources/tpl/test_for_import_recursive_1.tpl'}} b {{macro1()}} c {{macro2()}} d",
			"expected": "a  b macro1 output c macro2 output d"
		  }]
}, {
	"name": "include",
	"cases": [{
		"resourceResolver": { "-type": "default" },
		"input": "a {{include(':baseURI:testresources/tpl/test_for_include.tpl')}} b",
		"expected": "a include file contents b"
	  },
	  {
		"resourceResolver": { "-type": "default" },
		"input": "a {{include('other::baseURI:testresources/tpl/test_for_include.tpl').isUndefined()}} b",
		"expected": "a true b"
	  },
	  {
		"resourceResolver": { "-type": "default" },
		"input": "a {{include(':baseURI:testresources/tpl/unknown.tpl').isUndefined()}} b",
		"expected": "a true b"
	  },
	  {
		"resourceResolver": { "-type": "default" },
		"input": "a {{var x = 30}} b {{x}} c {{include(':baseURI:testresources/tpl/test_for_include.tpl')}} d {{x}} e",
		"expected": "a  b 30 c include file contents d 30 e"
	  },
	  {
		"resourceResolver": { "-type": "default" },
		"input": "a {{macro macro_name}}local macro{{/macro}} b {{macro_name()}} c {{include(':baseURI:testresources/tpl/test_for_include.tpl')}} d {{macro_name()}} e",
		"expected": "a  b local macro c include file contents d local macro e"
	  },
	  {
		"resourceResolver": { "-type": "default" },
		"input": "a {{include(':baseURI:testresources/tpl/test_for_include.tpl')}} b {{macro_name().isUndefined()}} c",
		"expected": "a include file contents b true c"
	  },
	  {
		"resourceResolver": { "-type": "default" },
		"input": "a {{include(':baseURI:testresources/tpl/test_for_include_invalid.tpl').isUndefined()}} b",
		"expected": "a true b"
	}]
}, {
	"name": "relative URIs",
	"cases": [{
		"global": {
			  "name": "baseURI",
		  	"-value": ":baseURI:"
		},
		"input": "a {{loadText('testresources/txt/file.txt')}} b",
		"expected": "a text file content b"
	  },
	  {
		"resourceResolver": { "-type": "default" },
		"global": {
		  "name": "baseURI",
		  "-value": ":baseURI:"
		},
		"input": "a {{loadJSON('testresources/json/test_for_json.json')['key']}} b {{loadJSON('testresources/json/test_for_json.json').isMap()}} c",
		"expected": "a 123 b true c"
	  },
	  {
		"resourceResolver": { "-type": "default" },
		"global": {
		  "name": "baseURI",
		  "-value": ":baseURI:"
		},
		"input": "a {{global.baseURI}} b {{include('testresources/tpl/test_for_include_relative.tpl')}} c {{global.baseURI}} d",
		"expected": "a :baseURI: b relative file :baseURI:testresources/tpl/test_for_include_relative.tpl content c :baseURI: d"
	  },
	  {
		"resourceResolver": { "-type": "default" },
		"global": {
		  "name": "baseURI",
		  "-value": ":baseURI:"
		},
		"input": "a {{include('testresources/tpl/unknown.tpl').isUndefined()}} b",
		"expected": "a true b"
	  },
	  {
		"resourceResolver": { "-type": "default" },
		"global": {
		  "name": "baseURI",
		  "-value": ":baseURI:"
		},
		"input": "a {{global.baseURI}} b {{include('testresources/tpl/test_for_include_subfolder.tpl')}} c {{global.baseURI}} d",
		"expected": "a :baseURI: b ZA:baseURI:testresources/tpl/subfolder/file_for_include.tplBX c :baseURI: d"
	  },
	  {
		"resourceResolver": { "-type": "default" },
		"global": {
		  "name": "baseURI",
		  "-value": ":baseURI:"
		},
		"input": "a {{import 'testresources/tpl/test_for_import.tpl'}} b {{x}} c {{macro_name()}} d",
		"expected": "a  b 10 c inner macro output d"
	  },
	  {
		"resourceResolver": { "-type": "default" },
		"global": {
		  "name": "baseURI",
		  "-value": ":baseURI:"
		},
		"input": "a {{global.baseURI}} b {{import ':baseURI:testresources/tpl/test_for_import_subfolder.tpl'}} c {{macro1()}} d {{macro2()}} e {{global.baseURI}} f",
		"expected": "a :baseURI: b  c macro1 :baseURI:testresources/tpl/test_for_import_subfolder.tpl output d macro2 :baseURI:testresources/tpl/subfolder/file_for_import.tpl output e :baseURI: f"
	  }]
}]