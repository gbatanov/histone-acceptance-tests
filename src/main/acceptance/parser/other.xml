<suites>

    <suite name="all other test cases">

        <case>
            <input>{{%for x in items}}{{else</input>
            <exception>
                <line>1</line>
                <expected>%}}</expected>
                <found>EOF</found>
            </exception>
        </case>

        <case>
            <input>hello {{}} world</input>
            <expected type="json">["hello ", " world"]</expected>
        </case>

        <case>
            <input>a {{% hello {{10 * 2}} world %}} b</input>
            <expected type="json">["a "," hello {{10 * 2}} world "," b"]</expected>
        </case>

        <case>
            <input>{{+}}</input>
            <exception>
                <line>1</line>
                <expected>expression</expected>
                <found>}}</found>
            </exception>
        </case>

        <case>
            <input>{{&#xD;+}}</input>
            <exception>
                <line>2</line>
                <expected>expression</expected>
                <found>}}</found>
            </exception>
        </case>

        <case>
            <input>{{&#xD;&#xD;+}}</input>
            <exception>
                <line>3</line>
                <expected>expression</expected>
                <found>}}</found>
            </exception>
        </case>

        <case>
            <input>fragment</input>
            <expected type="json">["fragment"]</expected>
        </case>

        <case>
            <input>fragment1 fragment2</input>
            <expected type="json">["fragment1 fragment2"]</expected>
        </case>

        <case>
            <input>fragment1 {{* comment *}} fragment2</input>
            <expected type="json">["fragment1 ", " fragment2"]</expected>
        </case>

        <case>
            <input>fragment1 {{* comment{{* *}} fragment2</input>
            <expected type="json">["fragment1 "," fragment2"]</expected>
        </case>

        <case>
            <input>fragment1 {{* comment*}} *}} fragment2</input>
            <expected type="json">["fragment1 "," *}} fragment2"]</expected>
        </case>

        <case>
            <input>{{* comment without closing block</input>
            <exception>
                <line>1</line>
                <expected>*}}</expected>
                <found>EOF</found>
            </exception>
        </case>
       
    </suite>
</suites>